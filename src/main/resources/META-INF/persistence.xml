<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="easypizza" transaction-type="RESOURCE_LOCAL">
		<class>br.com.easypizza.entidade.Cliente</class>
		<class>br.com.easypizza.entidade.FormaPagamento</class>
		<class>br.com.easypizza.entidade.Funcionario</class>
		<class>br.com.easypizza.entidade.Pedido</class>
		<class>br.com.easypizza.entidade.PedidoItem</class>
		<class>br.com.easypizza.entidade.Produto</class>
		<class>br.com.easypizza.entidade.Login</class>
		<class>br.com.easypizza.entidade.TipoUsuario</class>
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/easypizza" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="123456" />
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.hbm2ddi.auto" value="create" />
            <property name = "hibernate.show_sql" value = "true" />
            <property name = "hibernate.format_sql" value = "true" />
            
           
           </properties> 
	</persistence-unit>
</persistence>
